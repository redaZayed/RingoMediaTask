
@model Core.Common.Request_Model.SearchDepartment
<!-- Modal -->
<div class="modal fade" id="searchDepartmentModal" tabindex="-1" aria-labelledby="searchDepartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchDepartmentModalLabel">Search Departments</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="searchDepartmentForm" method="post" action="/Department/Search">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="SearchText">Department Name</label>
                        <input asp-for="SearchText" class="form-control" />
                        <span asp-validation-for="SearchText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepartmentId">Parent Department</label>
                        <select asp-for="DepartmentId" asp-items="@ViewBag.Departments" class="form-control">
                            <option value="">Select Parent Department (Optional)</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>